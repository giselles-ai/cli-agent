{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"declaration": false,
		"sourceMap": true,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
